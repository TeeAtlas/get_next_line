	"version": "0.2.0",
	"configurations": [
		
		{
			"name": "C-DEBUG",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/a.out",
			"args":[],
			"stopAtEntry":false,
			"cwd": "workspaceFolder",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
                    "text": "-gdb-set follow-fork-mode child -enable-pretty-printing",
                    "ignoreFailures": true
				}
			],
			"miDebuggerPath": "/usr/bin/gdb",

		}

	]
}